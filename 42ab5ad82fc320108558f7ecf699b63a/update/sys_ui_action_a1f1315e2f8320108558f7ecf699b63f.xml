function reopen(){
   if(g_form.getValue('ticketcomments') == ''){
      //Remove any existing field message, set comments mandatory, and show a new field message
      g_form.hideFieldMsg('ticketcomments');
      g_form.setMandatory('ticketcomments', true);
      g_form.showFieldMsg('ticketcomments','Comments are mandatory when reopening an Incident.','error');
      return false;  //Abort submission
   }
	   
	    g_form.setValue('state', 'Work_in_progress');
